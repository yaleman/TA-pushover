{
    "meta": {
        "name": "TA-pushover",
        "displayName": "Pushover App for Splunk",
        "version": "0.0.1",
        "apiVersion": "3.0.0",
        "restRoot": "TA_pushover"
    },
    "pages": {
        "configuration": {
            "title": "Configuration",
            "description": "Set up your add-on",
            "tabs": [
                {
                    "name": "additional_parameters",
                    "title": "Add-on Settings",
                    "entity": [
                        {
                            "field": "user_key",
                            "label": "User key",
                            "type": "text",
                            "help": "",
                            "required": true,
                            "defaultValue": "",
                            "validators": [
                                {
                                    "type": "string",
                                    "minLength": 0,
                                    "maxLength": 8192,
                                    "errorMsg": "Max length of text input is 8192"
                                }
                            ]
                        },
                        {
                            "field": "application_token",
                            "label": "Application Token",
                            "type": "text",
                            "help": "",
                            "required": false,
                            "defaultValue": "",
                            "encrypted": true,
                            "validators": [
                                {
                                    "type": "string",
                                    "minLength": 0,
                                    "maxLength": 8192,
                                    "errorMsg": "Max length of password is 8192"
                                }
                            ]
                        },
                        {
                            "field": "device_name",
                            "label": "Device Name",
                            "type": "text",
                            "help": "Comma-separated list of device names to send alerts to. Leave blank for \"all\".",
                            "required": false,
                            "defaultValue": "",
                            "validators": [
                                {
                                    "type": "string",
                                    "minLength": 0,
                                    "maxLength": 8192,
                                    "errorMsg": "Max length of text input is 8192"
                                }
                            ]
                        }
                    ]
                }
            ]
        }
    }
}